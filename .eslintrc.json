{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^(authenticatedFetch|getCsrfToken)$" }],
    "no-undef": "error",
    "no-redeclare": ["error", { "builtinGlobals": false }]
  },
  "globals": {
    "authenticatedFetch": "writable",
    "getCsrfToken": "writable"
  }
}
